<%= form_with(model: person, local: true) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :lastName %>
    <%= form.text_field :lastName, id: :person_lastName %>
  </div>

  <div class="field">
    <%= form.label :firstName %>
    <%= form.text_field :firstName, id: :person_firstName %>
  </div>

  <div class="field">
    <%= form.label :middleInitial %>
    <%= form.text_field :middleInitial, id: :person_middleInitial %>
  </div>

  <div class="field">
    <%= form.label :pet %>
    <%= form.select :pet, ['dog', 'cat', 'both', 'none'] %>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_field :birthday, id: :person_birthday %>
  </div>

  <div class="field">
    <%= form.label :favoriteColor %>
    <%= form.text_field :favoriteColor, id: :person_favoriteColor %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
